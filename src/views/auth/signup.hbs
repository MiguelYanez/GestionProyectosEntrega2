<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Registrarse</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group">
              <input type="text" name="rut" placeholder="RUT" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="nombres" placeholder="Nombres" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="apellidos" placeholder="Apellidos" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="correo" placeholder="Correo Electrónico" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="contrasena" placeholder="Contraseña" class="form-control">
            </div>
            <div class="form-group">
              <label>Fecha de nacimiento:</label>
              <input type="date" name="fecha_nacimiento" placeholder="Fecha de nacimiento" class="form-control">
            </div>
            <div class="form-group form-check-inline">
              <input type="radio" name="rol" class="form-check-input" id="inlineRadio1" value="experto" onclick="mostarAreas()">
              <label class="form-check-label" for="inlineRadio1">Experto</label>
            </div>
            <div class="form-group form-check-inline">
              <input type="radio" name="rol" class="form-check-input" id="inlineRadio2" value="jefeproyecto" onclick="mostarTitulo()">
              <label class="form-check-label" for="inlineRadio2">Jefe proyecto</label>
            </div>

            <!-- AREAS -->
            <div id="areas" style="display: none; visibility: hidden;" class="form-group">
              <select name="area" class="form-select"  style="max-width: 306px;">
                <option value="" disabled selected>Seleccione un Area</option>
                <option value="Experto en seguridad social">Experto en seguridad social</option>
                <option value="Experto en seguridad informatica">Experto en seguridad informatica</option>
                <option value="Experto en proyección economica">Experto en proyección economica</option>
              </select>
            </div>
            <!-- TITULOS -->
            <div id="titulos"  style="display: none; visibility: hidden;" class="form-group">
              <select name="titulo" class="form-select">
                <option value="" disabled selected>Seleccione un Título</option>
                <option value="Ingenieria Civil">Ingenieria Civil</option>
                <option value="Ingenieria en Prevencion de riesgos">Ingenieria en Prevencion de riesgos</option>
                <option value="Trabajo social">Trabajo social</option>
              </select>
            </div>

            <div class="form-group">
              <button class="btn btn-success btn-block">
                Registrarse
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
function mostarAreas() {
  document.getElementById("titulos").style.display = "none";
  document.getElementById("titulos").style.visibility = "hidden";

  document.getElementById("areas").style.display = "block";
  document.getElementById("areas").style.visibility = "visible";
}
function mostarTitulo() {

  document.getElementById("areas").style.display = "none";
  document.getElementById("areas").style.visibility = "hidden";

  document.getElementById("titulos").style.display = "block";
  document.getElementById("titulos").style.visibility = "visible";
}
</script>